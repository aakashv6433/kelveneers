const architectClients = [
  client1,
  client2,
  client3,
  client4,
  client5,
  client6,
  client7,
  client8,
  client9,
  client10,
  client11,
  client12,
  client13,
  client14,
  client15,
  client16,
];
const builderClients = [
  client17,
  client18,
  client19,
  client20,
  client21,
