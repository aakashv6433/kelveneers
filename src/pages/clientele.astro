---
import { Image } from "astro:assets";
import PageLayout from "../layouts/PageLayout.astro";
import clienteleHero from "../assets/clientele-page-hero.png";
import client127_1 from "../assets/clientele/127_1_1.png";
import client127_2 from "../assets/clientele/127_2_1.png";
import client128_1 from "../assets/clientele/128_1_1.png";
import client128_2 from "../assets/clientele/128_2_1.png";
import client129_1 from "../assets/clientele/129_1_1.png";
import client129_2 from "../assets/clientele/129_2_1.png";
import client130_1 from "../assets/clientele/130_1_1.png";
import client130_2 from "../assets/clientele/130_2_1.png";
---

<PageLayout title="Clientele">
  <!-- Hero Section -->
  <section class="relative">
    <Image
      src={clienteleHero}
      alt="Clientele Hero Background"
      loading={"eager"}
      class="w-full object-cover"
    />

    <!-- Heading positioned at bottom -->
    <h1
      class="absolute bottom-[11%] text-[#E5E2D6] font-[AcidGrotesk] font-extralight text-lg sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl"
      style="left: 9%;"
    >
      Our Clientele
    </h1>
  </section>

  <!-- Architects Section -->
  <section
    class="flex flex-col items-center py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32 space-y-6 sm:space-y-8 md:space-y-10"
  >
    <h2
      class="text-center font-[AcidGrotesk] font-extralight text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
    >
      Architects
    </h2>
    <div
      class="flex flex-col items-center w-[85%] space-y-5 sm:space-y-7 md:space-y-9 lg:space-y-11"
    >
      <Image
        src={client127_1}
        alt="Architect Client 1"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={client127_2}
        alt="Architect Client 2"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={client128_1}
        alt="Architect Client 3"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={client128_2}
        alt="Architect Client 4"
        loading={"lazy"}
        class="w-full h-auto"
      />
    </div>
  </section>

  <!-- Builders Section -->
  <section
    class="flex flex-col items-center pb-16 sm:pb-20 md:pb-24 lg:pb-28 xl:pb-32 space-y-6 sm:space-y-8 md:space-y-10"
  >
    <h2
      class="text-center font-[AcidGrotesk] font-extralight text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
    >
      Builders
    </h2>
    <div class="flex flex-col items-center w-[85%]">
      <Image
        src={client129_1}
        alt="Builder Client 1"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={client129_2}
        alt="Builder Client 2"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={client130_1}
        alt="Builder Client 3"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={client130_2}
        alt="Builder Client 4"
        loading={"lazy"}
        class="w-full h-auto"
      />
    </div>
  </section>
</PageLayout>
