---
import PageLayout from "../layouts/PageLayout.astro";
import bannerImage from "../assets/contact_banner_new.png";
---

<PageLayout title="Contact â€¢ Kelveneers">
  <section
    class="w-full xl:pt-4 xl:sm:pt-7 xl:md:pt-10 xl:lg:pt-14 xl:xl:pt-18 xl:px-3 xl:sm:px-4 xl:md:px-8 xl:lg:px-0 xl:xl:px-16 mb-24 md:mb-36 lg:mb-44 xl:mb-52"
  >
    <!-- Banner image for mobile/tablet (below 1280px) - full width with no gaps -->
    <div class="xl:hidden w-full mb-4 md:mb-6 lg:mb-8">
      <div class="overflow-hidden h-[30vh] sm:h-[40vh] lg:h-[50vh]">
        <img
          src={bannerImage.src}
          alt="Contact page image"
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <div
      class="max-w-[1680px] mx-auto grid grid-cols-1 xl:[grid-template-columns:36%_9%_55%] px-3 sm:px-4 md:px-8 lg:px-12 xl:px-16 pt-4 sm:pt-7 md:pt-10 lg:pt-14 xl:pt-0"
    >
      <!-- Left column: content on beige background -->
      <div class="pt-0 pb-6 sm:pb-8 md:pb-10 min-w-0">
        <h1
          class="font-[AcidGrotesk] font-light leading-[0.9] text-[#391B26] text-4xl sm:text-5xl md:text-6xl lg:text-7xl min-[1450px]:!text-[90px] text-center sm:text-left mt-3.5 sm:mt-0"
        >
          Contact Us
        </h1>
        <p
          class="mt-3 sm:mt-4 md:mt-6 lg:mt-8 mb-0 text-[#391B26]/80 font-[Altone] text-[12px] sm:text-[14px] md:text-[16px] lg:text-[20px] xl:text-[24px] 2xl:text-[28px] hidden sm:block"
        >
          Residential Windows & Doors
        </p>

        <!-- Contact details -->
        <div
          class="space-y-2 sm:space-y-3 md:space-y-4 text-[#391B26] hidden sm:block"
        >
          <div>
            <div
              class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base"
            >
              syed@kelveneers.com
            </div>
            <div
              class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base"
            >
              +91- 886 197 8734
            </div>
          </div>
        </div>
        <p
          class="mt-3 sm:mt-4 md:mt-6 lg:mt-8 mb-0 text-[#391B26]/80 font-[Altone] text-[12px] sm:text-[14px] md:text-[16px] lg:text-[20px] xl:text-[24px] 2xl:text-[28px] hidden sm:block"
        >
          Project Enquiries
        </p>
        <div
          class="space-y-2 sm:space-y-3 md:space-y-4 text-[#391B26] hidden sm:block"
        >
          <div>
            <div
              class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base"
            >
              sagar@kelveneers.com
            </div>
            <div
              class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base"
            >
              +91- 819 724 0629
            </div>
          </div>
        </div>

        <p
          class="mt-4 md:mt-6 lg:mt-8 text-[10px] sm:text-[11px] md:text-xs lg:text-sm text-[#391B26] max-w-[320px] sm:max-w-[520px] mx-auto sm:mx-0 text-center sm:text-left mb-5 sm:mb-0"
        >
          Have a question, comment, or concern? Let us know and we will get in
          touch with you as soon as possible.
        </p>

        <!-- Simple form mock to match layout -->
        <form
          class="mt-2 sm:mt-3 md:mt-4 lg:mt-6 space-y-2 sm:space-y-3 md:space-y-4 w-full xl:max-w-[620px]"
        >
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3">
            <input
              type="text"
              placeholder="Name"
              class="h-8 sm:h-9 md:h-10 lg:h-11 px-2 sm:px-3 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26]/70 focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm"
            />
            <input
              type="tel"
              placeholder="Phone"
              class="h-8 sm:h-9 md:h-10 lg:h-11 px-2 sm:px-3 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26]/70 focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm"
            />
          </div>
          <input
            type="email"
            placeholder="Email"
            class="w-full h-8 sm:h-9 md:h-10 lg:h-11 px-2 sm:px-3 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26]/70 focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm"
          />
          <textarea
            rows="7"
            placeholder="Comment"
            class="w-full px-2 sm:px-3 py-1 sm:py-2 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26]/70 focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm"
          ></textarea>
          <button
            type="button"
            class="h-8 sm:h-10 md:h-12 xl:h-14 px-5 sm:px-4 md:px-6 lg:px-7 bg-[#F07A66] text-white font-[Altone] text-[10px] sm:text-xs lg:text-sm mx-auto sm:mx-0 block sm:inline-block mt-1 sm:mt-0"
            >SUBMIT</button
          >
        </form>
      </div>

      <!-- Empty gap column (visible on xl) -->
      <div class="hidden xl:block"></div>

      <!-- Right column (desktop only) -->
      <div class="hidden xl:block w-full h-full">
        <div class="overflow-hidden">
          <img
            src={bannerImage.src}
            alt="Contact page image"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>
</PageLayout>
