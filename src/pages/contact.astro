---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import contactImage from "../assets/contactus.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Contact â€¢ Kelveneers</title>
  </head>
  <body class="contact-page">
    <Header isContactPage={true} />
    <!-- Spacer to render content below the fixed navbar -->
    <div class="h-[60px] md:h-[80px] lg:h-[100px]"></div>

    <main class="bg-[#f4f0e0]">
      <section class="w-full px-3 sm:px-4 md:px-8">
        <div class="max-w-[1680px] mx-auto grid grid-cols-1 xl:grid-cols-2 gap-4 sm:gap-6 md:gap-10">
          <!-- Left column: content on beige background -->
          <div class="pt-2 sm:pt-4 md:pt-6 xl:pt-10 pb-6 sm:pb-8 md:pb-10">
            <h1 class="font-[AcidGrotesk] font-thin leading-[0.9] text-[#391B26] whitespace-nowrap text-[32px] sm:text-[40px] md:text-[56px] lg:text-[80px] xl:text-[112px]">
              Contact Us
            </h1>
            <p class="mt-3 sm:mt-4 md:mt-6 lg:mt-8 mb-0 text-[#391B26]/80 font-[Altone] text-[12px] sm:text-[14px] md:text-[16px] lg:text-[20px] xl:text-[24px] 2xl:text-[28px]">
              Residential Windows & Doors
            </p>

            <!-- Contact details -->
            <div class="space-y-2 sm:space-y-3 md:space-y-4 text-[#391B26]">
              <div>
                <div class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base">sayed@kvveneers.com</div>
                <div class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base">+91 - 808 197 8734</div>
              </div>
            </div>
            <p class="mt-3 sm:mt-4 md:mt-6 lg:mt-8 mb-0 text-[#391B26]/80 font-[Altone] text-[12px] sm:text-[14px] md:text-[16px] lg:text-[20px] xl:text-[24px] 2xl:text-[28px]">
              Project Enquiries
            </p>
            <div class="space-y-2 sm:space-y-3 md:space-y-4 text-[#391B26]">
              <div>
                <div class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base">sagar@kelveneers.com</div>
                <div class="font-[Altone] text-[10px] sm:text-[12px] md:text-sm lg:text-base">+91 897 744 0629</div>
              </div>
            </div>

            <p class="mt-3 sm:mt-4 md:mt-6 lg:mt-8 text-[10px] sm:text-[11px] md:text-xs lg:text-sm text-[#391B26] max-w-[520px]">
              Have a question, comment, or concern? Let us know and we will get in
              touch with you as soon as possible.
            </p>

            <!-- Simple form mock to match layout -->
            <form class="mt-2 sm:mt-3 md:mt-4 lg:mt-6 space-y-2 sm:space-y-3 md:space-y-4 max-w-[620px]">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3">
                <input type="text" placeholder="Name" class="h-8 sm:h-9 md:h-10 lg:h-11 px-2 sm:px-3 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26] focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm" />
                <input type="tel" placeholder="Phone" class="h-8 sm:h-9 md:h-10 lg:h-11 px-2 sm:px-3 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26] focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm" />
              </div>
              <input type="email" placeholder="Email" class="w-full h-8 sm:h-9 md:h-10 lg:h-11 px-2 sm:px-3 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26] focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm" />
              <textarea rows="4" placeholder="Comment" class="w-full px-2 sm:px-3 py-1 sm:py-2 border border-[#391B26] bg-transparent text-[#391B26] placeholder-[#391B26] focus:outline-none focus:border-[#F07A66] text-[10px] sm:text-[12px] md:text-sm"></textarea>
              <button type="button" class="h-7 sm:h-8 md:h-9 px-3 sm:px-4 bg-[#F07A66] text-white text-[10px] sm:text-[11px] md:text-xs font-[Altone]">SUBMIT</button>
            </form>
          </div>

          <!-- Right column: fixed-size image on xl -->
          <div class="w-full flex items-start justify-center xl:justify-end pt-2 sm:pt-3 md:pt-4 lg:pt-6 xl:pt-10">
            <div class="w-full overflow-hidden max-w-[clamp(200px,50vw,780px)] aspect-[1019/1089]">
              <img src={contactImage.src} alt="Contact page image" class="w-full h-auto object-cover" />
            </div>
          </div>
        </div>

        <!-- Divider before footer -->
        <div class="max-w-[1680px] mx-auto mt-6 sm:mt-8 md:mt-10 lg:mt-14 h-px bg-[#E5E2D6]"></div>
      </section>
    </main>

    <Footer />
  </body>
</html>


