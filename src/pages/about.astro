---
import { Image } from "astro:assets";
import PageLayout from "../layouts/PageLayout.astro";
import aboutHero from "../assets/about-page-dummy-hero.png";
import ourQuality from "../assets/our-quality.png";
---

<PageLayout title="About Us">
  <!-- Hero Section -->
  <section class="relative">
    <Image
      src={aboutHero}
      alt="About Us Hero Background"
      loading={"eager"}
      class="w-full object-cover"
    />
  </section>

  <!-- Our Quality Section -->
  <section
    class="flex flex-col items-center py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32 space-y-6 sm:space-y-8 md:space-y-10"
  >
    <h2
      class="text-center font-[AcidGrotesk] font-extralight text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
    >
      Our Quality
    </h2>
    <div class="flex flex-col items-center w-full">
      <Image
        src={ourQuality}
        alt="Our Quality"
        loading={"lazy"}
        class="w-[75%] h-auto"
      />
    </div>
  </section>
</PageLayout>
