---
import { Image } from "astro:assets";
import PageLayout from "../layouts/PageLayout.astro";
import heroLeft from "../assets/our_offerings/hero_left.png";
import heroRight from "../assets/our_offerings/hero_right.png";
import arrowLeft from "../assets/our_offerings/arrow_left.svg";
import topLeftImage from "../assets/wts/tl.png";
import topRightImage from "../assets/wts/tr.png";
import bottom1Image from "../assets/wts/b1.png";
import bottom2Image from "../assets/wts/b2.png";
import bottom3Image from "../assets/wts/b3.png";
import bottom4Image from "../assets/wts/b4.png";
---

<PageLayout title="Walk Through Systems">
  <div class="w-full">
    <div class="relative flex w-full">
      <Image
        src={heroLeft}
        alt="Hero Left"
        loading={"eager"}
        class="w-1/4 h-auto object-cover"
      />
      <Image
        src={heroRight}
        alt="Hero Right"
        loading={"eager"}
        class="w-3/4 h-auto object-cover"
      />
      <div
        class="absolute top-2/9 left-1/4 transform -translate-x-1/2 -translate-y-1/2 flex items-center justify-center"
      >
        <Image
          src={arrowLeft}
          alt="Arrow Left"
          class="w-7 h-7 min-[500px]:w-8 min-[500px]:h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16 xl:w-20 xl:h-20"
        />
      </div>
    </div>
  </div>
  <div
    class="flex flex-col space-y-10 sm:space-y-20 py-8 sm:py-16 px-4 sm:px-6 lg:px-9 xl:px-12"
  >
    <div class="flex justify-between w-full">
      <div
        class="flex flex-col space-y-0.5 sm:space-y-1.5 md:space-y-2.5 lg:space-y-3.5 xl:space-x-6"
      >
        <h2
          class="font-[AcidGrotesk] font-light text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
        >
          Sliding Windows
        </h2>
        <h5
          class="font-[Altone] font-normal text-sm sm:text-base lg:text-lg xl:text-xl leading-none"
        >
          Walk-through Systems
        </h5>
      </div>
      <div class="flex flex-col space-y-0 justify-end">
        <h6
          class="font-[Altone] font-normal text-[6px] sm:text-[8px] md:text-[10px] lg:text-[12px] xl:text-[14px] text-right"
        >
          *Weight per sash should not exceed 150kgs
        </h6>
        <h6
          class="font-[Altone] font-normal text-[6px] sm:text-[8px] md:text-[10px] lg:text-[12px] xl:text-[14px] text-right"
        >
          Max Height - 3000mm &nbsp;|&nbsp; Max Width - 1800mm
        </h6>
      </div>
    </div>
    <div
      class="flex flex-col sm:flex-row justify-center align-middle w-full space-y-3.5 sm:space-y-0 sm:space-x-3.5"
    >
      <Image
        src={topLeftImage}
        alt="Mechanism Diagram"
        loading={"eager"}
        class="aspect-[780/1048] h-auto object-contain w-full sm:max-w-[40%]"
      />
      <Image
        src={topRightImage}
        alt="Legend"
        loading={"eager"}
        class="aspect-[780/1048] h-auto object-contain w-full sm:max-w-[40%]"
      />
    </div>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-0 w-full pb-36">
    <Image
      src={bottom1Image}
      alt="Image 1"
      loading={"lazy"}
      class="w-full h-full object-cover"
    />
    <Image
      src={bottom2Image}
      alt="Image 2"
      loading={"lazy"}
      class="w-full h-full object-cover"
    />
    <Image
      src={bottom3Image}
      alt="Image 3"
      loading={"lazy"}
      class="w-full h-full object-cover"
    />
    <Image
      src={bottom4Image}
      alt="Image 4"
      loading={"lazy"}
      class="w-full h-full object-cover"
    />
  </div>
</PageLayout>
