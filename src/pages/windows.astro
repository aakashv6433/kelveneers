---
import { Image } from "astro:assets";
import PageLayout from "../layouts/PageLayout.astro";
import OfferingSection from "../components/offerings/OfferingSection.astro";
import HeroSection from "../components/common/HeroSection.astro";
import specificationsImage from "../assets/our_offerings/specs-min.png";
import bottomImage1 from "../assets/our_offerings/b1-min.png";
import bottomImage2 from "../assets/our_offerings/b2-min.png";
import bottomImage3 from "../assets/our_offerings/b3-min.png";
import bottomImage4 from "../assets/our_offerings/b4-min.png";
import subCat1Image from "../assets/our_offerings/sub_cat_2-min.png";
import subCat2Image from "../assets/our_offerings/sub_cat_1-min.png";
import subCat3Image from "../assets/our_offerings/sub_cat_3-min.png";
import frenchDoorsImage from "../assets/windows/1D/b1-min.png";
import slidingWindowsImage from "../assets/windows/1A/b1-min.png";
import liftAndSlideImage from "../assets/windows/1B/b1-min.png";
import slideFoldImage from "../assets/windows/1C/b1-min.png";
import stdCasementImage from "../assets/windows/2A/b1-min.png";
import topHungCasementImage from "../assets/windows/2B/b1-min.png";
import tiltAndTurnImage from "../assets/windows/2C/b1-min.png";
import fixedWindowsImage from "../assets/windows/2D/b1-min.png";
import louveredSystemsImage from "../assets/windows/3A/b1-min.png";
import openableSlatesImage from "../assets/windows/3B/b1-min.png";
---

<PageLayout title="windows â€¢ kelveneers" footerBgColor="#f4f0e4">
  <slot name="head">
    <link rel="preload" as="image" href={slidingWindowsImage.src} />
    <link rel="preload" as="image" href={liftAndSlideImage.src} />
    <link rel="preload" as="image" href={slideFoldImage.src} />
    <link rel="preload" as="image" href={frenchDoorsImage.src} />
    <link rel="preload" as="image" href={stdCasementImage.src} />
    <link rel="preload" as="image" href={topHungCasementImage.src} />
    <link rel="preload" as="image" href={tiltAndTurnImage.src} />
    <link rel="preload" as="image" href={fixedWindowsImage.src} />
    <link rel="preload" as="image" href={louveredSystemsImage.src} />
    <link rel="preload" as="image" href={openableSlatesImage.src} />
  </slot>
  <div style="background-color: rgb(244, 240, 228);">
    <HeroSection
      arrowDirection="right"
      arrowLink="/kelveneers/windows/walk-through-systems/sliding-windows"
    />

    <div class="flex flex-col px-[8.33vw] pt-[7.8125vw] pb-[10vw]">
      <div
        class="flex flex-col space-y-0 sm:space-y-0.5 md:space-y-1 lg:space-y-1.5 xl:space-y-2.5"
      >
        <h2
          class="font-[AcidGrotesk] font-light text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
        >
          <span class="font-medium">Glulam</span> Timber Windows
        </h2>
        <h5
          class="font-[Altone] font-normal text-xs sm:text-sm md:text-base lg:text-lg xl:text-xl leading-none pl-0 md:pl-0.5"
        >
          Custom Carpentry v/s Kelveneers Systems
        </h5>
      </div>
      <div>
        <Image
          src={specificationsImage}
          alt="Specifications"
          loading={"eager"}
        />
      </div>
    </div>
    <OfferingSection
      title="Walk-through Systems"
      items={[
        "Std. Sliding Windows",
        "Lift & Slide Windows",
        "Slide Fold Windows",
        "French Doors",
      ]}
      images={[
        slidingWindowsImage,
        liftAndSlideImage,
        slideFoldImage,
        frenchDoorsImage,
      ]}
      imageAlt="Walk-through System"
      itemUrls={[
        "/kelveneers/windows/walk-through-systems/sliding-windows",
        "/kelveneers/windows/walk-through-systems/lift-and-slide-windows",
        "/kelveneers/windows/walk-through-systems/slide-fold-windows",
        "/kelveneers/windows/walk-through-systems/french-doors",
      ]}
      defaultImage={subCat1Image}
      paddingTop="pt-[8.33vw]"
    />
    <OfferingSection
      title="Light and Ventilation"
      items={[
        "Std. Casement",
        "Top Hung Casement",
        "Tilt & Turn Windows",
        "Fixed Windows",
      ]}
      images={[
        stdCasementImage,
        topHungCasementImage,
        tiltAndTurnImage,
        fixedWindowsImage,
      ]}
      imageAlt="Light and Ventilation"
      itemUrls={[
        "/kelveneers/windows/light-and-ventilation/std-casement",
        "/kelveneers/windows/light-and-ventilation/top-hung-casement",
        "/kelveneers/windows/light-and-ventilation/tilt-and-turn-windows",
        "/kelveneers/windows/light-and-ventilation/fixed-windows",
      ]}
      defaultImage={subCat2Image}
    />
    <OfferingSection
      title="Sunscreen Systems"
      items={["Louvered Systems", "Openable Slates"]}
      images={[louveredSystemsImage, openableSlatesImage]}
      imageAlt="Sunscreen Systems"
      itemUrls={[
        "/kelveneers/windows/sunscreen-systems/louvered-systems",
        "/kelveneers/windows/sunscreen-systems/openable-slates",
      ]}
      defaultImage={subCat3Image}
      paddingBottom="pb-[8.33vw]"
    />

    <div
      class="flex flex-col items-center px-[8.33vw] gap-[11vw] pt-[10vw] pb-[15vw]"
    >
      <Image
        src={bottomImage1}
        alt="Bottom Image 1"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={bottomImage2}
        alt="Bottom Image 2"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={bottomImage3}
        alt="Bottom Image 3"
        loading={"lazy"}
        class="w-full h-auto"
      />
      <Image
        src={bottomImage4}
        alt="Bottom Image 4"
        loading={"lazy"}
        class="w-full h-auto"
      />
    </div>
  </div>
</PageLayout>

<style>
  @media (hover: hover) {
    #hero-arrow:hover {
      transform: scale(1.15);
    }
  }
</style>
