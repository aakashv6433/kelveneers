---
import { Image } from "astro:assets";
import PageLayout from "../layouts/PageLayout.astro";
import OfferingSection from "../components/offerings/OfferingSection.astro";
import heroImage from "../assets/wts/wts-hero-image.png";
import specificationsImage from "../assets/our_offerings/specs.png";
import subCategoryImage1 from "../assets/our_offerings/sub_cat_1.png";
import subCategoryImage2 from "../assets/our_offerings/sub_cat_2.png";
import subCategoryImage3 from "../assets/our_offerings/sub_cat_3.png";
import bottomImage1 from "../assets/our_offerings/b1.png";
import bottomImage2 from "../assets/our_offerings/b2.png";
import bottomImage3 from "../assets/our_offerings/b3.png";
import bottomImage4 from "../assets/our_offerings/b4.png";
---

<PageLayout title="Our Offerings">
  <Image src={heroImage} alt="Hero Image" loading={"eager"} class="w-full" />

  <div
    class="flex flex-col py-8 px-6 sm:py-10 sm:px-12 md:py-12 md:px-16 lg:py-20 lg:px-24 space-y-1.5 md:space-y-3.5"
  >
    <div
      class="flex flex-col space-y-0 sm:space-y-0.5 md:space-y-1 lg:space-y-1.5 xl:space-y-2.5"
    >
      <h2
        class="font-[AcidGrotesk] font-extralight text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
      >
        <span class="font-light">Glulam</span> Timber Windows
      </h2>
      <h5
        class="font-[Altone] font-normal text-xs sm:text-sm md:text-md lg:text-lg xl:text-xl leading-none pl-0 md:pl-0.5"
      >
        Custom Carpentry v/s Kelveneers Systems
      </h5>
    </div>
    <div>
      <Image src={specificationsImage} alt="Specifications" loading={"eager"} />
    </div>
  </div>
  <OfferingSection
    title="Walk-through System"
    items={[
      "Std. Sliding Windows",
      "Lift & Slide Windows",
      "Slide Fold Windows",
      "French Doors",
    ]}
    images={[
      subCategoryImage1,
      subCategoryImage2,
      subCategoryImage3,
      subCategoryImage1,
    ]}
    imageAlt="Walk-through System"
    firstItemUrl="/walk-through-systems"
  />
  <OfferingSection
    title="Light and Ventilation"
    items={[
      "Std. Casement",
      "Top Hung Casement",
      "Tilt & Turn Windows",
      "Fixed Windows",
    ]}
    images={[
      subCategoryImage2,
      subCategoryImage3,
      subCategoryImage1,
      subCategoryImage2,
    ]}
    imageAlt="Light and Ventilation"
  />
  <OfferingSection
    title="Sunscreen Systems"
    items={["Louvered Systems", "Operable Slates"]}
    images={[subCategoryImage3, subCategoryImage1]}
    imageAlt="Sunscreen Systems"
    paddingTop="pt-8 sm:pt-12 md:pt-16 lg:pt-20 xl:pt-24"
    paddingBottom="pb-8 sm:pb-12 md:pt-16 lg:pb-20 xl:pb-24"
  />

  <div
    class="flex flex-col items-center gap-16 sm:gap-20 md:gap-24 lg:gap-28 xl:gap-32 py-16 sm:py-20 md:py-24 lg:py-28 xl:py-32"
  >
    <Image
      src={bottomImage1}
      alt="Bottom Image 1"
      loading={"lazy"}
      class="w-[90%] sm:w-[92%] md:w-[93%] lg:w-[95%] h-auto"
    />
    <Image
      src={bottomImage2}
      alt="Bottom Image 2"
      loading={"lazy"}
      class="w-[90%] sm:w-[92%] md:w-[93%] lg:w-[95%] h-auto"
    />
    <Image
      src={bottomImage3}
      alt="Bottom Image 3"
      loading={"lazy"}
      class="w-[90%] sm:w-[92%] md:w-[93%] lg:w-[95%] h-auto"
    />
    <Image
      src={bottomImage4}
      alt="Bottom Image 4"
      loading={"lazy"}
      class="w-[90%] sm:w-[92%] md:w-[93%] lg:w-[95%] h-auto"
    />
  </div>
</PageLayout>
