    <div class="flex items-center">
      <button
        type="button"
        aria-label="Hamburger"
        class="bg-transparent border-none cursor-pointer"
        id="hamburger-menu"
      >
        <Image
          src={hamburgerIcon}
          alt={"Hamburger Icon"}
          loading={"eager"}
          class="hamburger-icon nav-icon"
        /></button
      >
    </div>

    <!-- Mobile Logo - Center on mobile, hidden on md and up -->
