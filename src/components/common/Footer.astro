---
import fullLogo from "../../assets/full-logo.svg?url";
---

<style>
  footer a {
    cursor: pointer;
    transition: color 0.3s ease;
  }

  footer a:hover {
    color: #eb7d66;
  }

  footer li {
    cursor: pointer;
    transition: color 0.3s ease;
  }

  footer li:hover {
    color: #eb7d66;
  }
</style>

<footer class="bg-[#f4f0e0] mb-[40px]">
  <!-- Inset top rule -->
  <div
    class="border-t border-[#D6D0C7] mx-6 md:mx-8 lg:mx-12 xl:mx-16 2xl:mx-20"
  >
  </div>
  <div
    class="max-w-[1200px] xl:max-w-[1320px] 2xl:max-w-[1440px] mx-auto px-6 md:px-8 lg:px-12 py-12 md:py-16"
  >
    <!-- Top grid -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 md:gap-12"
    >
      <!-- Products -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-thin text-[22px] tracking-wide text-[#391B26] mb-5"
        >
          Products
        </h3>
        <ul
          class="space-y-3 font-[Altone] text-[13px] tracking-wider text-[#391B26]"
        >
          <li>DOORS</li>
          <li><a href="/kelveneers/windows">WINDOWS</a></li>
          <li>FRAMES</li>
          <li class="leading-tight">
            <span class="block">ARCHITECTURAL</span><span class="block"
              >ADD-ON PRODUCTS</span
            >
          </li>
        </ul>
      </div>

      <!-- About us -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-thin text-[22px] tracking-wide text-[#391B26] mb-5"
        >
          About us
        </h3>
        <ul
          class="space-y-3 font-[Altone] text-[13px] tracking-wider text-[#391B26]"
        >
          <li>MISSION</li>
          <li>VISION</li>
          <li>OUR QUALITY</li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-thin text-[22px] tracking-wide text-[#391B26] mb-5"
        >
          Connect
        </h3>
        <ul
          class="space-y-3 font-[Altone] text-[13px] tracking-wider text-[#391B26]"
        >
          <li>FACEBOOK</li>
          <li>INSTAGRAM</li>
          <li>LINKEDIN</li>
          <li>PINTEREST</li>
          <li>YOUTUBE</li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-thin text-[22px] tracking-wide text-[#391B26] mb-5"
        >
          Sign up for our newsletter
        </h3>
        <div class="flex items-center gap-2 border-b border-[#E0DFDC] pb-3">
          <input
            type="email"
            placeholder="Email address"
            class="flex-1 bg-transparent outline-none placeholder:text-[#391B26] font-[Altone] text-[14px] py-2"
          />
          <span class="text-[#391B26]">â†’</span>
        </div>
      </div>
    </div>

    <!-- Bottom brand -->
    <div class="pt-12 md:pt-16 mb-8 md:mb-12">
      <img
        src={fullLogo}
        alt="kelveneers logo"
        class="w-full max-w-[980px] md:max-w-[1200px] xl:max-w-[1400px] h-auto select-none"
      />
    </div>
  </div>
  <!-- Inset bottom rule -->
  <div
    class="border-b border-[#D6D0C7] mx-6 md:mx-8 lg:mx-12 xl:mx-16 2xl:mx-20"
  >
  </div>
</footer>
