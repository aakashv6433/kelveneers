---
import fullLogo from "../../assets/full-logo.svg?url";
---

<style>
  footer a {
    cursor: pointer;
    transition: color 0.3s ease;
  }

  footer a:hover {
    color: #eb7d66;
  }

  footer li {
    cursor: pointer;
    transition: color 0.3s ease;
  }

  footer li:hover {
    color: #eb7d66;
  }
</style>

<footer class="bg-[#f4f0e0] mb-[40px]">
  <!-- Inset top rule -->
  <div class="border-t border-[#D6D0C7] mx-[8.33vw]"></div>
  <div class="w-full mx-auto px-[8.33vw] py-12 md:py-16">
    <!-- Top grid -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 md:gap-12"
    >
      <!-- Products -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-light text-3xl tracking-wide text-[#391B26] mb-5"
        >
          Products
        </h3>
        <ul
          class="space-y-3 font-[Altone] text-[13px] tracking-wider text-[#391B26]"
        >
          <li><a href="/kelveneers/doors">DOORS</a></li>
          <li><a href="/kelveneers/windows">WINDOWS</a></li>
          <li><a href="/kelveneers/frames">FRAMES</a></li>
          <li class="leading-tight">
            <a href="/kelveneers/architectural-add-on-products"
              ><span class="block">ARCHITECTURAL</span><span class="block"
                >ADD-ON PRODUCTS</span
              ></a
            >
          </li>
        </ul>
      </div>

      <!-- About us -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-light text-3xl tracking-wide text-[#391B26] mb-5"
        >
          About us
        </h3>
        <ul
          class="space-y-3 font-[Altone] text-[13px] tracking-wider text-[#391B26]"
        >
          <li>
            <a href="/kelveneers/about">ABOUT</a>
          </li><li>
            <a href="/kelveneers/clientele">CLIENTELE</a>
          </li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-light text-3xl tracking-wide text-[#391B26] mb-5"
        >
          Connect
        </h3>
        <ul
          class="space-y-3 font-[Altone] text-[13px] tracking-wider text-[#391B26]"
        >
          <li>
            <a
              href="https://www.facebook.com/kelachandraveneers"
              target="_blank">FACEBOOK</a
            >
          </li>
          <li>
            <a href="https://www.instagram.com/kelveneers" target="_blank"
              >INSTAGRAM</a
            >
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/kelveneers-pvt-ltd-b63639377"
              target="_blank">LINKEDIN</a
            >
          </li>
          <li>
            <a
              href="https://www.youtube.com/@kelveneerswoodwork"
              target="_blank">YOUTUBE</a
            >
          </li>
          <li>
            <a href="/kelveneers/contact">CONTACT US</a>
          </li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h3
          class="font-[AcidGrotesk] font-light text-3xl tracking-wide text-[#391B26] mb-5"
        >
          Sign up for our newsletter
        </h3>
        <div class="flex items-center gap-2 border-b border-[#c0bcb4] pb-3">
          <input
            type="email"
            placeholder="Email address"
            class="flex-1 bg-transparent outline-none placeholder:text-[#A89F92] font-[Altone] text-[14px] pt-3 pb-1"
          />
          <span class="text-[#391B26] font-sans">â†’</span>
        </div>
      </div>
    </div>

    <!-- Bottom brand -->
    <div class="pt-12 md:pt-16 mb-8 md:mb-12">
      <a href={`${import.meta.env.BASE_URL}`}>
        <img
          src={fullLogo}
          alt="kelveneers logo"
          class="w-full max-w-[980px] md:max-w-[1200px] xl:max-w-[1400px] h-auto select-none"
        />
      </a>
    </div>
  </div>
  <!-- Inset bottom rule -->
  <div class="border-b border-[#D6D0C7] mx-[8.33vw]"></div>
</footer>
