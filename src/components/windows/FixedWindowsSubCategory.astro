---
import { Image } from "astro:assets";
import PageLayout from "../../layouts/PageLayout.astro";
import HeroSection from "../common/HeroSection.astro";

export interface Props {
  title?: string | null;
  subtitle?: string | null;
  specs?: string[] | null;
  topImage?: any | null;
  bottomImages?: any[] | null;
  heroRight?: any | null;
}

const { title, subtitle, specs, topImage, bottomImages, heroRight } =
  Astro.props;

const finalTitle = title === undefined ? "Fixed Windows" : title;
const finalSubtitle =
  subtitle === undefined ? "Light and Ventilation" : subtitle;
const finalSpecs =
  specs === undefined
    ? [
        "*Weight per sash should not exceed 150kgs",
        "Max Height - 3000mm &nbsp;|&nbsp; Max Width - 1800mm",
      ]
    : specs;

const hasTopImage = topImage !== null && topImage !== undefined;
---

<PageLayout title={`${title} â€¢ kelveneers`} footerBgColor="#f4f0e4">
  <div style="background-color: rgb(244, 240, 228);">
    <HeroSection
      arrowDirection="left"
      arrowLink="/kelveneers/windows"
      heroRight={heroRight}
    />
    <div class="w-full border-b md:border-b-2 border-[#D6D0C7]"></div>
    <div
      class="flex flex-col space-y-14 sm:space-y-16 md:space-y-20 lg:space-y-28 xl:space-y-32 py-12 sm:py-24 lg:py-30 px-[4.17vw]"
    >
      <div class="flex justify-between w-full">
        <div
          class="flex flex-col space-y-0.5 sm:space-y-1.5 md:space-y-2.5 lg:space-y-3.5 xl:space-x-6"
        >
          {
            finalTitle !== null && (
              <h2 class="font-[AcidGrotesk] font-light text-[#391B26] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl">
                {finalTitle
                  .split(" ")
                  .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
                  .join(" ")}
              </h2>
            )
          }
          {
            finalSubtitle !== null && (
              <h5 class="font-[Altone] font-normal text-sm sm:text-base lg:text-lg xl:text-xl leading-none">
                {finalSubtitle}
              </h5>
            )
          }
        </div>
        <div class="hidden sm:flex flex-col space-y-0 justify-end">
          {
            finalSpecs !== null &&
              finalSpecs.map((spec) => (
                <h6 class="font-[Altone] font-normal text-[6px] sm:text-[8px] md:text-[10px] lg:text-[12px] xl:text-[14px] text-right">
                  {spec}
                </h6>
              ))
          }
        </div>
      </div>
      {
        hasTopImage && (
          <div class="flex justify-center w-full pb-7 sm:pb-24">
            {topImage !== null && topImage !== undefined && (
              <Image
                src={topImage}
                alt="Mechanism Diagram"
                loading={"eager"}
                class="h-auto object-contain w-full sm:max-w-[60%]"
              />
            )}
          </div>
        )
      }
    </div>
    <div class="w-full pb-33 sm:pb-57 flex flex-col">
      {
        bottomImages !== null && bottomImages !== undefined && (
          <>
            {bottomImages.length > 2 && (
              <div class="flex justify-center w-full">
                <Image
                  src={bottomImages[2]}
                  alt="Image 3"
                  loading={"lazy"}
                  class="w-full  sm:max-w-[70%]  h-auto object-cover pb-12 sm:pb-36"
                />
              </div>
            )}
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-0">
              {bottomImages.slice(0, 2).map((image, index) => (
                <Image
                  src={image}
                  alt={`Image ${index + 1}`}
                  loading={"lazy"}
                  class="w-full h-full object-cover"
                />
              ))}
            </div>
          </>
        )
      }
    </div>
  </div>
</PageLayout>
