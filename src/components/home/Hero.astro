---
import { Image } from "astro:assets";
import heroBanner from "../../assets/hero-banner-min.png";
import fullLogo from "../../assets/full-logo.svg";
import heroMobileLogo from "../../assets/hero-mobile-logo.svg";

const imageModules = import.meta.glob("../../assets/hero-carousel/*.png", {
  eager: true,
});
const images = Object.values(imageModules).map((module: any) => module.default);
---

<!-- Hero Section -->
<section class="relative h-screen">
  <Image
    src={heroBanner}
    alt="Hero Background"
    loading={"eager"}
    class="w-full h-full object-cover"
  />

  <!-- SVG Overlay -->
  <!-- Mobile Logo (below 640px) -->
  <div
    class="absolute inset-x-0 top-1/2 -translate-y-1/2 flex flex-col items-center justify-center sm:hidden"
  >
    <Image
      src={heroMobileLogo}
      alt="Kelveneers Logo"
      loading={"eager"}
      class="h-auto w-[85%]"
    />
    <h3
      class="pt-16 min-[407px]:pt-19 text-center text-[#E5E2D6] font-[AcidGrotesk] font-extralight text-2xl"
    >
      Mastering Timbercraft<br /><span class="italic">since 1980</span>
    </h3>
  </div>

  <!-- Desktop Content Container (640px and above) - aligned widthwise and extended beyond 50-60% -->
  <div class="hidden sm:block absolute left-[7%] top-0 bottom-0 w-[65%] md:w-[70%] lg:w-[65%] xl:w-[60%] 2xl:w-[55%]">
    <!-- Logo and DOORS | WINDOWS | WOODWORK -->
    <div class="absolute top-[36%] left-0">
      <Image
        src={fullLogo}
        alt="Kelveneers Logo"
        loading={"eager"}
        class="h-auto w-[424px] md:w-[480px] lg:w-[600px] xl:w-[900px] 2xl:w-[900px] max-w-full"
      />
      <h3
        class="mt-3 md:mt-5 lg:mt-7 xl:mt-10 text-[#E5E2D6] font-[Altone] font-bold text-base md:text-xl lg:text-2xl xl:text-4xl tracking-[0.1em] md:tracking-[0.2em] whitespace-nowrap"
      >
        DOORS <span class="mx-1 md:mx-2 lg:mx-5">|</span> WINDOWS <span
          class="mx-1 md:mx-2 lg:mx-5">|</span
        > WOODWORK
      </h3>
    </div>

    <!-- Second H3 positioned at bottom - aligned widthwise with same left edge -->
    <h3
      class="absolute bottom-[7%] left-0 text-[#E5E2D6] font-[AcidGrotesk] font-extralight text-base sm:text-2xl md:text-3xl lg:text-4xl xl:text-[3.4rem]"
    >
      Mastering Timbercraft <span class="italic">since 1980</span>
    </h3>
  </div>
</section>

<!-- Scrollable Image Container -->
<section>
  <div class="grid grid-cols-7 gap-0">
    {
      images.map((image, index) => (
        <Image
          src={image}
          alt=""
          loading={"lazy"}
          class="w-full h-full object-cover"
        />
      ))
    }
  </div>
</section>
