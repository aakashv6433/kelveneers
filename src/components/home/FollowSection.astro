---
import { Image } from "astro:assets";
import followSectionImage from "../../assets/follow-section-image-min.png";
import instagramIcon from "../../assets/icons/instagram.svg";
---

<section class="pt-0 pb-8 md:pb-[11vw]">
  <div class="px-[8.33vw]">
    <!-- Horizontal line above the section (thicker) -->
    <div class="w-full h-px md:h-[2px] bg-[#E5E2D6] mb-8 md:mb-[7.7vw]"></div>

    <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
      <!-- Left side content - 695px on screens >= 1300px -->
      <div
        class="w-full lg:flex-1 xl:w-[695px] xl:max-w-[695px] flex flex-col gap-8 md:gap-12 xl:gap-28 text-center lg:text-left"
      >
        <div
          class="flex flex-col gap-8 md:gap-12 xl:gap-28 items-center lg:items-start"
        >
          <!-- Text content container -->
          <div class="space-y-4 md:space-y-6">
            <h2
              class="text-4xl md:text-5xl xl:text-6xl font-[AcidGrotesk] font-light text-[#391B26]"
            >
              For more details!
            </h2>

            <!-- <p
              class="text-lg md:text-xl text-[#391B26] font-[Altone] leading-relaxed"
            >
              Lorem ipsum dolor sit amet,<br />
              consectetur<br />
              adipiscing elit. Ut finibus pellentesque<br />
              pellentesque.
            </p> -->
          </div>

          <!-- Instagram Follow Button container -->
          <a
            href="https://www.instagram.com/kelveneers"
            target="_blank"
            class="bg-[#F07A66] hover:bg-[#e06a55] transition-colors duration-200 rounded-[40px] px-8 py-4 flex items-center gap-3 text-white font-[Altone] font-bold text-lg"
          >
            <!-- Instagram Icon -->
            <Image
              src={instagramIcon}
              alt="Instagram Icon"
              width={24}
              height={24}
              class="w-6 h-6"
              loading="lazy"
            />
            Follow Us on Instagram
          </a>
        </div>
      </div>

      <!-- Right side image - 1149px on screens >= 1300px -->
      <div
        class="w-full lg:flex-2 xl:w-[1149px] xl:max-w-[1149px] overflow-hidden"
      >
        <Image
          src={followSectionImage}
          alt="Follow Section"
          class="w-full h-auto block"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
