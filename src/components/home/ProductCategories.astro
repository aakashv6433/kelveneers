---
import windowSystemsImage from "../../assets/product-categories-section/window-systems.png";
---

<section>
  <div class="flex flex-col md:flex-row gap-11 md:gap-0 px-4 md:px-8 py-14">
    <div class="basis-2/3 flex flex-col justify-between">
      <div class="hidden md:block">
        <h5
          class="text-[#391B26] font-[Altone] font-normal leading-snug text-sm md:text-base lg:text-lg xl:text-xl"
        >
          WITH 40 YEARS OF CRAFTSMANSHIP
        </h5>
        <h5
          class="text-[#391B26] font-[Altone] font-normal leading-snug text-sm md:text-base lg:text-lg xl:text-xl"
        >
          AND EXPERTISE IN WOODWORK.
        </h5>
      </div>
      <div class="flex flex-col gap-3 sm:gap-4 md:gap-5">
        <h2
          class="font-[AcidGrotesk] font-extralight text-2xl sm:text-3xl md:text-3xl lg:text-4xl xl:text-5xl transition-colors"
          data-category="0"
        >
          Window Systems
        </h2>
        <h2
          class="font-[AcidGrotesk] font-extralight text-2xl sm:text-3xl md:text-3xl lg:text-4xl xl:text-5xl transition-colors"
          data-category="1"
        >
          Wooden Doors
        </h2>
        <h2
          class="font-[AcidGrotesk] font-extralight text-2xl sm:text-3xl md:text-3xl lg:text-4xl xl:text-5xl transition-colors"
          data-category="2"
        >
          Frames
        </h2>
        <h2
          class="font-[AcidGrotesk] font-extralight text-2xl sm:text-3xl md:text-3xl lg:text-4xl xl:text-5xl transition-colors"
          data-category="3"
        >
          Architectural add-on products
        </h2>
      </div>
    </div>
    <div class="basis-1/3">
      <img
        src={windowSystemsImage.src}
        alt="Product Category"
        class="aspect-[603/755] w-full h-auto"
        id="category-image"
        loading="lazy"
      />
    </div>
  </div>
</section>

<script>
  const categories = [
    "Window Systems",
    "Wooden Doors",
    "Frames",
    "Architectural add-on products",
  ];
  // Note: Add images for other categories in assets/product-categories-section/
  const images = [
    "/src/assets/product-categories-section/window-systems.png",
    "/src/assets/product-categories-section/wooden-doors.png", // Placeholder for Wooden Doors
    "/src/assets/product-categories-section/frames.png", // Placeholder for Frames
    "/src/assets/product-categories-section/architectural-add-on-products.png", // Placeholder for Architectural add-on products
  ];

  let selectedIndex = 0;

  const h2s = document.querySelectorAll("h2[data-category]");
  const img = document.getElementById("category-image") as HTMLImageElement;

  function updateSelection() {
    h2s.forEach((h2, i) => {
      const element = h2 as HTMLElement;
      if (i === selectedIndex) {
        element.style.color = "#EB7D66";
      } else {
        element.style.color = "#746d6f";
      }
    });
    img.src = images[selectedIndex];
  }

  h2s.forEach((h2, index) => {
    h2.addEventListener("mouseover", () => {
      selectedIndex = index;
      updateSelection();
    });
  });

  // Set default selection to first
  updateSelection();
</script>
