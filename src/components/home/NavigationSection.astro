---
import { Image } from "astro:assets";
import img1 from "../../assets/navigation-section-in-the-home-page/1.png";
import img2 from "../../assets/navigation-section-in-the-home-page/2.png";
import img3 from "../../assets/navigation-section-in-the-home-page/3.png";
import img4 from "../../assets/navigation-section-in-the-home-page/4.png";
import img5 from "../../assets/navigation-section-in-the-home-page/5.png";
import img6 from "../../assets/navigation-section-in-the-home-page/6.png";
import a1 from "../../assets/navigation-section-in-the-home-page/a1.svg";
import a2 from "../../assets/navigation-section-in-the-home-page/a2.svg";
import a3 from "../../assets/navigation-section-in-the-home-page/a3.svg";
---

<section
  class="hidden sm:flex w-full h-[50vw] overflow-hidden relative mt-12 mb-8 sm:mt-16 sm:mb-12 md:mt-24 md:mb-16 lg:mt-32 lg:mb-20 xl:mt-36 xl:mb-24"
>
  <!-- Left Portion: 50% width -->
  <div class="w-1/2 h-[50vw] flex flex-col">
    <!-- Top Half: Images 1 and 2 -->
    <div class="flex-[40] flex">
      <div class="flex-1 hover:z-20 relative">
        <Image
          src={img1}
          alt="Navigation item 1"
          loading={"lazy"}
          class="block w-full h-full object-cover transition-transform duration-300 hover:scale-110 peer"
        />
        <Image
          src={a1}
          alt="Overlay"
          loading={"lazy"}
          class="absolute top-[22%] -translate-y-1/2 -right-3 w-6 h-6 sm:-right-5 sm:w-10 sm:h-10 md:-right-6 md:w-12 md:h-12 lg:-right-7 lg:w-14 lg:h-14 xl:-right-9 xl:w-18 xl:h-18 object-contain peer-hover:opacity-0 transition-opacity duration-0 delay-0"
        />
      </div>
      <div class="flex-1">
        <Image
          src={img2}
          alt="Navigation item 2"
          loading={"lazy"}
          class="block w-full h-full object-cover"
        />
      </div>
    </div>
    <!-- Bottom Half: Image 3 -->
    <div class="flex-[60] hover:z-20 relative">
      <Image
        src={img3}
        alt="Navigation item 3"
        loading={"lazy"}
        class="block w-full h-full object-cover transition-transform duration-300 hover:scale-110 peer"
      />
      <Image
        src={a2}
        alt="Overlay"
        loading={"lazy"}
        class="absolute top-[74%] -translate-y-1/2 -right-3 w-6 h-6 sm:-right-5 sm:w-10 sm:h-10 md:-right-6 md:w-12 md:h-12 lg:-right-7 lg:w-14 lg:h-14 xl:-right-9 xl:w-18 xl:h-18 object-contain peer-hover:opacity-0 transition-opacity duration-0 delay-0"
      />
    </div>
  </div>

  <!-- Right Portion: 50% width -->
  <div class="w-1/2 h-[50vw] flex">
    <!-- Left Half: Image 4 -->
    <div class="w-[48.52%]">
      <Image
        src={img4}
        alt="Navigation item 4"
        loading={"lazy"}
        class="block w-full h-full object-cover"
      />
    </div>
    <!-- Right Half: Images 5 and 6 -->
    <div class="w-[51.48%] flex flex-col">
      <div class="flex-1 hover:z-20 relative">
        <Image
          src={img5}
          alt="Navigation item 5"
          loading={"lazy"}
          class="block w-full h-full object-cover transition-transform duration-300 hover:scale-110 peer"
        />
        <Image
          src={a3}
          alt="Overlay"
          loading={"lazy"}
          class="absolute left-[24%] -translate-x-1/2 -bottom-3 w-6 h-6 sm:-bottom-5 sm:w-10 sm:h-10 md:-bottom-6 md:w-12 md:h-12 lg:-bottom-7 lg:w-14 lg:h-14 xl:-bottom-9 xl:w-18 xl:h-18 object-contain peer-hover:opacity-0 transition-opacity duration-0 delay-0"
        />
      </div>
      <div class="flex-1">
        <Image
          src={img6}
          alt="Navigation item 6"
          loading={"lazy"}
          class="block w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
</section>
