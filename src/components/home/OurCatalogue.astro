---
import { Image } from "astro:assets";
import ourCatalogueImage from "../../assets/ourcatalogue-homepage.png";
---

<section>
  <div class="flex pl-4 md:pl-8 py-0 md:py-16">
    <div class="basis-2/3">
      <Image src={ourCatalogueImage} alt="House" loading={"lazy"} />
    </div>
    <div
      class="basis-1/3 border-1 border-[#E5E2D6] p-3 md:p-6 flex flex-col justify-between"
    >
      <div></div>
      <h2
        class="font-[AcidGrotesk] font-extralight text-[#391B26] text-lg sm:text-2xl md:3xl lg:text-4xl xl:text-5xl"
      >
        Our Catalogue
      </h2>
    </div>
  </div>
</section>
