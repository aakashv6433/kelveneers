---
export interface Props {
  text: string;
  index: number;
  url?: string;
}

const { text, index, url } = Astro.props;
---

<li
  class="border-b-[0.5px] border-[#F0F1F2] pb-2 sm:pb-2.5 md:pb-3 flex justify-between items-center cursor-pointer"
  data-item={index}
  onclick={url ? `window.location.href='${url}'` : undefined}
>
  <span
    class="font-[AcidGrotesk] font-extralight text-[#F0F1F2] text-sm sm:text-base md:text-lg lg:text-xl transition-colors"
    >{text}</span
  >
  <span
    class="font-sans font-extralight text-[#F0F1F2] text-sm sm:text-base md:text-lg lg:text-xl"
    >â†’</span
  >
</li>
