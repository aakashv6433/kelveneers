---
// import { Image } from "astro:assets";
import OfferingItem from "./OfferingItem.astro";

export interface Props {
  title: string;
  items: string[];
  images: ImageMetadata[];
  imageAlt: string;
  paddingTop?: string;
  paddingBottom?: string;
  itemUrls?: string[];
  defaultImage?: ImageMetadata;
}

const {
  title,
  items,
  images,
  imageAlt,
  paddingTop = "pt-8 sm:pt-12 md:pt-16 lg:pt-20 xl:pt-24",
  paddingBottom = "pb-8 sm:pb-10 md:pb-12",
  itemUrls,
  defaultImage,
} = Astro.props;

// Prepare image URLs for the client-side script
const imageUrls = images.map((img) => img.src);
---

<div
  class={`offering-section flex w-full flex-col bg-[#391B26] ${paddingTop} ${paddingBottom} px-6 sm:px-8 md:px-12`}
>
  <div class="md:grid md:grid-cols-[6fr_7fr] gap-6 sm:gap-8 md:gap-16">
    <div
      class="flex flex-col gap-6 sm:gap-8 md:justify-between w-full md:w-[85%]"
    >
      <div class="text-center md:text-left">
        <h3
          class="font-[AcidGrotesk] font-light text-[#F0F1F2] text-lg sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl"
        >
          {title}
        </h3>
      </div>
      <div class="w-full sm:w-[85%] md:hidden overflow-hidden mx-auto">
        <img
          src={defaultImage ? defaultImage.src : images[0].src}
          alt={imageAlt}
          class="w-full h-full aspect-square object-cover"
          id={`offering-image-mobile-${title.replace(/\s+/g, "-").toLowerCase()}`}
          loading="lazy"
        />
      </div>
      <div>
        <ul>
          {
            items.map((item, index) => (
              <OfferingItem text={item} index={index} url={itemUrls?.[index]} />
            ))
          }
        </ul>
      </div>
    </div>
    <div
      class="hidden md:block w-full sm:w-[85%] md:w-[70%] overflow-hidden mx-auto"
    >
      <img
        src={defaultImage ? defaultImage.src : images[0].src}
        alt={imageAlt}
        class="w-full h-full aspect-square object-cover"
        id={`offering-image-${title.replace(/\s+/g, "-").toLowerCase()}`}
        loading="lazy"
      />
    </div>
  </div>
</div>

<script define:vars={{ imageUrls, title, defaultImage }}>
  // Use a more specific selector based on the title
  const sectionId = title.replace(/\s+/g, "-").toLowerCase();
  const section = document.querySelector(
    `.offering-section:has(#offering-image-${sectionId})`
  );

  if (section) {
    const lis = section.querySelectorAll("li[data-item]");
    const img = section.querySelector(`#offering-image-${sectionId}`);
    const imgMobile = section.querySelector(
      `#offering-image-mobile-${sectionId}`
    );

    const defaultImageUrl = defaultImage ? defaultImage.src : null;

    let selectedIndex = -1; // Start with no selection
    let touchStarted = false;

    // Only allow image switching on devices that support hover/pointer fine
    const supportsHover =
      typeof window !== "undefined" &&
      typeof window.matchMedia === "function" &&
      window.matchMedia("(hover: hover) and (pointer: fine)").matches;
    const allowImageChange = !!supportsHover;

    function updateSelection() {
      lis.forEach((li, i) => {
        const textSpan = li.querySelector("span:first-child");
        const arrowSpan = li.querySelector("span:last-child");
        if (i === selectedIndex) {
          textSpan.style.color = "#EB7D66";
          arrowSpan.style.color = "#EB7D66";
          arrowSpan.style.transform = "scale(1.15)";
        } else {
          textSpan.style.color = "#F0F1F2";
          arrowSpan.style.color = "#F0F1F2";
          arrowSpan.style.transform = "scale(1)";
        }
      });

      // Only update the image when image changes are allowed (desktop hover)
      if (!allowImageChange) return;

      const imageIndex =
        selectedIndex >= 0 ? selectedIndex : defaultImageUrl ? -1 : 0;
      if (imageIndex === -1) {
        if (img && defaultImageUrl) {
          img.src = defaultImageUrl;
        }
        if (imgMobile && defaultImageUrl) {
          imgMobile.src = defaultImageUrl;
        }
      } else {
        if (img && imageUrls[imageIndex]) {
          img.src = imageUrls[imageIndex];
        }
        if (imgMobile && imageUrls[imageIndex]) {
          imgMobile.src = imageUrls[imageIndex];
        }
      }
    }

    if (supportsHover) {
      // Desktop / pointer devices: behave as before (hover changes image and highlight)
      lis.forEach((li, index) => {
        li.addEventListener("mouseover", () => {
          selectedIndex = index;
          updateSelection();
        });
        li.addEventListener("mouseout", () => {
          selectedIndex = -1;
          updateSelection();
        });
      });
    } else {
      // Touch devices: do not change images, but allow colour (highlight) on touch
      lis.forEach((li, index) => {
        li.addEventListener(
          "touchstart",
          () => {
            touchStarted = true;
            // highlight the touched item
            selectedIndex = index;
            updateSelection();
            // clear the highlight shortly after so it doesn't stick forever
            setTimeout(() => {
              selectedIndex = -1;
              updateSelection();
            }, 700);

            // clear the flag shortly after to avoid holding state too long
            setTimeout(() => {
              touchStarted = false;
            }, 300);
          },
          { passive: true }
        );

        // Defensive: ignore any mouseover if it does show up after touch
        li.addEventListener("mouseover", (e) => {
          if (touchStarted) {
            e.stopImmediatePropagation();
          }
        });
      });
    }

    // Set default state (no orange highlighting). On touch devices we purposely
    // avoid forcing an image change here so the image stays static.
    updateSelection();
  }
</script>
